<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="ProgressDialogStyle">
        <item name="android:windowBackground">@drawable/background_progress_dialog</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AppBodyText">
        <item name="android:textSize" tools:ignore="SpUsage">14dp</item>
        <item name="android:fontFamily">@font/worksans_bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppContentText">
        <item name="android:textSize" tools:ignore="SpUsage">14dp</item>
        <item name="android:fontFamily">@font/worksans_regular</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTitleText">
        <item name="android:textSize" tools:ignore="SpUsage">16dp</item>
        <item name="android:fontFamily">@font/worksans_bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/background_button_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.14</item>
        <item name="android:textSize" tools:ignore="SpUsage">13dp</item>
        <item name="android:textAppearance">@style/AppBodyText</item>
    </style>

    <style name="AppCheckBox" parent="Theme.AppCompat">
        <item name="colorAccent">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="AppProgressBar" parent="Theme.AppCompat">
        <item name="colorAccent">@color/accent_2</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>
</resources>