            android:id="@+id/tv_title"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:src="@drawable/splash_logo" />

<!--    </com.facebook.shimmer.ShimmerFrameLayout>-->



    <ProgressBar
        android:layout_width="wrap_content"
